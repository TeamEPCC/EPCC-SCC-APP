<resources>

    <!-- Edited AppCompat theme to be fullscreen -->
    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/epccBlue</item>
        <item name="colorPrimaryDark">@color/epccDarkBlue</item>
        <item name="colorAccent">@color/epccOrange</item>
        <item name="android:colorBackground">@color/darkBg</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar.FullScreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/epccBlue</item>
        <item name="colorPrimaryDark">@color/epccDarkBlue</item>
        <item name="colorAccent">@color/epccOrange</item>
        <item name="android:colorBackground">@color/lightBg</item>
    </style>

</resources>
